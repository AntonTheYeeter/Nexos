    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch(Win32)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/sandbox.exe",
            "cwd": "${workspaceFolder}",
            "console": "newExternalWindow",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Launch(Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/sandbox.exe",
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "preLaunchTask": "CMake: build"
        }  
    ]
}